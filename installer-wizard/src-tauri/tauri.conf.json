{
  "productName": "Catalogizer Installation Wizard",
  "version": "1.0.0",
  "identifier": "com.catalogizer.installer-wizard",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Catalogizer Installation Wizard",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Installation wizard for Catalogizer SMB source configuration",
    "longDescription": "Desktop application to configure SMB network sources for Catalogizer media collection management system. Features network scanning, share browsing, and configuration wizard.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "entitlements": null,
      "signingIdentity": null,
      "providerShortName": null,
      "hardenedRuntime": true
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": null,
    "fs": null
  }
}