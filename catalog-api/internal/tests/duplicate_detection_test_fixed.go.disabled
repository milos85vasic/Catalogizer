package tests

import (
	"database/sql"
	"testing"

	"github.com/stretchr/testify/assert"
	"go.uber.org/zap"

	"catalogizer/internal/services"
	_ "github.com/mattn/go-sqlite3"
)

func TestDuplicateDetectionService_Basic(t *testing.T) {
	db, _ := sql.Open("sqlite3", ":memory:")
	logger := zap.NewNop()
	service := services.NewDuplicateDetectionService(db, logger, nil)

	// Test text similarity function
	testCases := []struct {
		text1    string
		text2    string
		expected float64
		name     string
	}{
		{
			text1:    "The Matrix",
			text2:    "The Matrix",
			expected: 1.0,
			name:     "identical strings",
		},
		{
			text1:    "The Matrix",
			text2:    "Matrix",
			expected: 0.8,
			name:     "partial match",
		},
		{
			text1:    "Completely Different Title",
			text2:    "Another Unrelated Work",
			expected: 0.1,
			name:     "unrelated content",
		},
	}

	for _, tc := range testCases {
		t.Run(tc.name, func(t *testing.T) {
			similarity := service.CalculateTextSimilarity(tc.text1, tc.text2)
			assert.InDelta(t, tc.expected, similarity, 0.15, "Similarity should be within expected range")
		})
	}
}

func TestDuplicateDetectionService_BasicMovieDuplicate(t *testing.T) {
	db, _ := sql.Open("sqlite3", ":memory:")
	logger := zap.NewNop()
	service := services.NewDuplicateDetectionService(db, logger, nil)

	year := 1999
	duration := 136
	fileSize1 := int64(2048000000) // 2GB
	fileSize2 := int64(1024000000) // 1GB
	
	originalMovie := &services.DuplicateItem{
		Title:    "The Matrix",
		Year:     &year,
		Genre:    "Science Fiction",
		Duration: &duration,
		FileSize: fileSize1,
	}

	duplicateMovie := &services.DuplicateItem{
		Title:    "Matrix",
		Year:     &year,
		Genre:    "Sci-Fi",
		Duration: &duration,
		FileSize: fileSize2,
	}

	t.Run("movie duplicate detection", func(t *testing.T) {
		similarity := service.CalculateMovieSimilarity(originalMovie, duplicateMovie)
		assert.True(t, similarity > 0.7, "Should detect movie similarity")
	})
}