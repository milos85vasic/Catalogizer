# Catalogizer Environment Configuration
# Copy this file to .env and update with your values

# Application Environment
APP_ENV=development  # development, staging, production
LOG_LEVEL=debug      # debug, info, warn, error

# API Configuration
API_PORT=8080

# Database Configuration (PostgreSQL)
DATABASE_TYPE=postgres
POSTGRES_USER=catalogizer
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=catalogizer_dev
POSTGRES_PORT=5432

# For development with SQLite (alternative to PostgreSQL)
# DATABASE_TYPE=sqlite
# SQLITE_PATH=./catalogizer.db

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# SMB/File System Configuration
SMB_ENABLED=true
MEDIA_ROOT_PATH=./media

# Docker Configuration (for production)
GO_VERSION=1.21
HTTP_PORT=80
HTTPS_PORT=443
